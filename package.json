{
  "name": "newsroom-cli",
  "description": "A modern CLI to get your favorite news.",
  "author": "kpman",
  "license": "MIT",
  "homepage": "https://github.com/kpman/newsroom/#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kpman/newsroom.git"
  },
  "bugs": {
    "url": "https://github.com/kpman/newsroom/issues"
  },
  "version": "0.1.7",
  "main": "bin/cli.js",
  "bin": {
    "newsroom": "bin/cli.js",
    "nr": "bin/cli.js"
  },
  "files": [
    "bin",
    "lib"
  ],
  "scripts": {
    "build": "npm run clean && babel src -d lib --copy-files --ignore '**/*.spec.js'",
    "clean": "rimraf lib",
    "precommit": "lint-staged",
    "lint": "eslint src",
    "lint:fix": "npm run lint -- --fix",
    "prepublishOnly": "npm run lint && npm run build",
    "test": "npm run lint && jest",
    "testonly": "jest",
    "testonly:cov": "jest --coverage --runInBand --forceExit",
    "testonly:watch": "jest --watch",
    "version": "rimraf package-lock.json && git add -A"
  },
  "dependencies": {
    "babel-runtime": "^6.26.0",
    "chalk": "^2.3.0",
    "cheerio": "^1.0.0-rc.2",
    "feed-read-parser": "^0.0.6",
    "figures": "^2.0.0",
    "fuzzy": "^0.1.3",
    "inquirer": "^3.3.0",
    "inquirer-autocomplete-prompt": "^0.12.0",
    "invariant": "^2.2.2",
    "minimist": "^1.2.0",
    "node-opml-parser": "^1.0.0",
    "open": "^0.0.5",
    "thenify": "^3.3.0",
    "update-notifier": "^2.3.0"
  },
  "devDependencies": {
    "babel-eslint": "^8.0.2",
    "babel-jest": "^21.2.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.6.1",
    "eslint": "^4.10.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-config-prettier": "^2.6.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-prettier": "^2.3.1",
    "husky": "^0.14.3",
    "jest": "^21.2.1",
    "lint-staged": "^4.3.0",
    "prettier": "^1.7.4",
    "prettier-package-json": "^1.4.0",
    "rimraf": "^2.6.2"
  },
  "keywords": [
    "newsletter"
  ],
  "engines": {
    "node": ">=4"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "coverageDirectory": "./coverage/"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "package.json": [
      "prettier-package-json --write",
      "git add"
    ]
  }
}
